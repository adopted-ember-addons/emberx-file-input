{
  "name": "emberx-file-input",
  "version": "1.2.1",
  "description": "A tiny Ember component which does one thing and only: select files beautifully.",
  "keywords": [
    "ember-addon",
    "file input",
    "file selector",
    "custom file input"
  ],
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "repository": "https://github.com/adopted-ember-addons/emberx-file-input",
  "scripts": {
    "build": "ember build",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:*",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each"
  },
  "dependencies": {
    "chai-jquery": "^2.0.0",
    "ember-cli-babel": "^7.26.11",
    "ember-cli-htmlbars": "^6.0.1"
  },
  "devDependencies": {
    "@embroider/test-setup": "^1.0.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-ajax": "^3.0.0",
    "ember-auto-import": "^2.4.1",
    "ember-cli": "~3.18.0",
    "ember-cli-chai": "^0.4.0",
    "ember-cli-dependency-checker": "^3.3.1",
    "ember-cli-eslint": "^5.1.0",
    "ember-cli-github-pages": "^0.1.2",
    "ember-cli-inject-live-reload": "^1.4.1",
    "ember-cli-mocha": "^0.15.0",
    "ember-cli-release": "^1.0.0-beta.2",
    "ember-cli-shims": "^1.2.0",
    "ember-cli-sri": "^2.1.0",
    "ember-cli-terser": "^4.0.2",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^2.1.2",
    "ember-resolver": "^8.0.3",
    "ember-sinon": "^5.0.0",
    "ember-source": "~4.4.1",
    "ember-template-lint": "^4.4.2",
    "ember-try": "^2.0.0",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "webpack": "^5.72.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "http://thefrontside.github.io/emberx-file-input/"
